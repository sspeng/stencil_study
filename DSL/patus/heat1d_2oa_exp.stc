stencil Heat1D2oa (double grid A(0 .. x_max+1))
{

	domainsize = (1 .. x_max);

  iterate while t < 10000;

  //du/dt = k * (d2u/d2x) 
  // Explicit method, du/dt is forward difference, rest is central

	
	operation
	{
    A[x; t+1] = 
      A[x;t] +
      0.125 * (A[x-1;t] - 2 * A[x;t] + A[x+1;t]);
	}
}
